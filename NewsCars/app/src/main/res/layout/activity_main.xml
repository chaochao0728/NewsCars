<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_replaceView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/main_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mainBtn_recommend"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="21dp"
                android:background="@drawable/selecter_recommend"
                android:button="@null"
                android:paddingBottom="10dp" />

            <RadioButton
                android:id="@+id/mainBtn_forum"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="21dp"
                android:background="@drawable/selecter_forum"
                android:button="@null"
                android:padding="10dp" />

            <RadioButton
                android:id="@+id/mainBtn_findCar"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="21dp"
                android:background="@drawable/selecter_findcar"
                android:button="@null"
                android:padding="10dp" />

            <RadioButton
                android:id="@+id/mainBtn_find"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="21dp"
                android:background="@drawable/selecter_find"
                android:button="@null"
                android:padding="10dp" />

            <RadioButton
                android:id="@+id/mainBtn_me"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="21dp"
                android:background="@drawable/selecter_me"
                android:button="@null"
                android:padding="10dp" />


        </RadioGroup>
    </LinearLayout>

</LinearLayout>
